@page
@model Grid_Game.Pages.ObjectList.IndexModel
@{
    ViewData["Title"] = "Index";
}

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Object List</h2>
    </div>
    <div class="col-3">
        <a class="btn btn-info form-control text-white">Create New Object</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if(Model.SortObjects.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="SortObjects.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="SortObjects.FirstOrDefault().Wins"></label>
                        </th>
                        <th>
                            <label asp-for="SortObjects.FirstOrDefault().Losses"></label>
                        </th>

                    </tr>
                    @foreach(var item in Model.SortObjects)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(m =>item.Name);
                    </td>
                    <td>
                        @Html.DisplayFor(m =>item.Wins);
                    </td>
                    <td>
                        @Html.DisplayFor(m =>item.Losses);
                    </td>
                </tr>
                    }
                </table>
            } else
            {
                <p>No objects availabe.</p>
            }
        </form>

    </div>

</div>